{
   "name": "franca-idl",
   "displayName": "FRANCA IDL",
   "description": "FRANCA Interface Description Language (FIDL) support for VSCode.",
   "version": "1.0.3",
   "icon": "images/icon.png",
   "files": [
      "out/**/*.js",
      "syntaxes/",
      "snippets.json",
      "language-configuration.json",
      "images/"
   ],
   "engines": {
      "vscode": "^1.75.0"
   },
   "categories": [
      "Programming Languages"
   ],
   "publisher": "weijh",
   "main": "./out/extension",
   "contributes": {
      "languages": [
         {
            "id": "franca",
            "aliases": [
               "FRANCA IDL",
               "fidl"
            ],
            "extensions": [
               ".fidl"
            ],
            "configuration": "./language-configuration.json"
         }
      ],
      "grammars": [
         {
            "language": "franca",
            "scopeName": "source.franca",
            "path": "./syntaxes/franca.tmLanguage.json"
         }
      ],
      "snippets": [
         {
            "language": "franca",
            "path": "./snippets.json"
         }
      ]
   },
   "scripts": {
      "compile": "tsc -p ./",
      "watch": "tsc -p ./ -w"
   },
   "repository": {
      "type": "git",
      "url": "git+https://github.com/weijiahan/franca-idl.git"
   },
   "keywords": [],
   "author": "",
   "license": "ISC",
   "bugs": {
      "url": "https://github.com/weijiahan/franca-idl/issues"
   },
   "homepage": "https://github.com/weijiahan/franca-idl#readme",
   "devDependencies": {
      "@types/node": "^25.0.9",
      "@types/vscode": "^1.75.0",
      "@vscode/vsce": "^3.7.1",
      "typescript": "^5.9.3",
      "vsce": "^2.15.0",
      "vscode-languageclient": "^9.0.1"
   },
   "dependencies": {
      "vscode-languageserver": "^9.0.1",
      "vscode-languageserver-textdocument": "^1.0.12"
   }
}
