{
   "name": "franca-idl",
   "displayName": "FRANCA IDL",
   "description": "FRANCA Interface Description Language (FIDL) support for VSCode.",
   "version": "0.0.6",
   "icon": "images/icon.png",
   "engines": {
      "vscode": "^1.40.0"
   },
   "categories": [
      "Programming Languages"
   ],
   "publisher": "weijh",
   "contributes": {
      "languages": [
         {
            "id": "franca",
            "aliases": [
               "FRANCA IDL",
               "fidl"
            ],
            "extensions": [
               ".fidl"
            ],
            "configuration": "./language-configuration.json"
         }
      ],
      "grammars": [
         {
            "language": "franca",
            "scopeName": "source.franca",
            "path": "./syntaxes/franca.tmLanguage.json"
         }
      ],
      "snippets": [
         {
            "language": "franca",
            "path": "./snippets.json"
         }
      ]
   }
}